@model List<Usuario>
@{
    ViewData["Title"] = "Lista de Usuários";
}
<h2>Usuários Cadastrados</h2>
<a href="/Usuario/Criar" class="btn btn-success mb-3">Novo Usuário</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Id</td>
                <td>@u.Nome</td>
                <td>@u.Email</td>
                <td>
                    <a href="/Usuario/Editar/@u.Id" class="btn btn-primary">Editar</a>
                    <a href="/Usuario/Excluir/@u.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
